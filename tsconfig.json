{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "rootDirs": ["src"],
    "outDir": "build",
    "moduleResolution": "node",

    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "experimentalDecorators": true
  }
}
